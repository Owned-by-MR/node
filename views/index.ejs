<html>
	<head>
		<meta charset="utf-8"> <meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		<style>
			body, html {
				width:100%;
				height:100%;
				margin:0;
				padding:0;
				display:table;
				background-color: grey;
				color: white
			}
			}
			body {
				display:table-cell;
				 vertical-align:middle;
			}	
			div {

                                display: table;
                                margin:0 30%;
                                color: white;
                        }

			div form {
				
				display: inline;
				margin:0;
				color: black;
			}
		</style>
	</head>
	<body>
		<nav class="navbar navbar-dark bg-dark" style="background-color: #e3f1f1;">
			<a class="navbar-brand" href="#">
				<i class="fa fa-check-circle"></i>
				ToDoList
			</a>
		</nav>
		<div class="container>
			<row>
				<h1 class="text-center">Enter ToDo</h1>
				<form class="col-6 mx-auto" action="/newtodo" method="POST">
					<div class="input-group">
						<input type="text" class="form-control" name="item" placeholder="Enter ToDo" value="new list item">
						<span> 
							<button type="submit" class="btn btn-primary">Submit</button>
						</span>
					</div>
				</form>
			</row>
			<div class="row">
				<ul class="col-6 mx-auto">
					<% for (var i = 0; i < todoList.length; i++) { %>
					<li><%= todoList[i].name %></li>
					<% } %>
				</ul>
			</div>
		</div>
	</body>
</html>
